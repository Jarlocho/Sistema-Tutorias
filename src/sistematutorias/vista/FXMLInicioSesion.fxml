<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" 
      style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);" 
      xmlns="http://javafx.com/javafx/8" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="sistematutorias.controlador.FXMLInicioSesionController">
    
    <!-- Cabecera -->
    <StackPane prefHeight="100.0" prefWidth="700.0" style="-fx-background-color: #18529d;">
        <effect>
            <DropShadow color="#00000033" offsetY="3.0" radius="5.0" />
        </effect>
        <Label text="Sistema de Tutorías" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="32.0" />
            </font>
            <padding>
                <Insets top="10.0" />
            </padding>
        </Label>
    </StackPane>
    
    <!-- Contenedor principal -->
    <VBox alignment="CENTER" spacing="40.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="40.0" bottom="40.0" />
        </padding>
        
        <!-- Tarjeta de login -->
        <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);" 
              maxWidth="400.0" prefWidth="400.0">
            <padding>
                <Insets top="40.0" bottom="40.0" left="40.0" right="40.0" />
            </padding>
            
            <!-- Icono o título de bienvenida -->
            <VBox alignment="CENTER" spacing="10.0">
                <!-- Solo la imagen PNG sin círculos ni efectos -->
                <ImageView fitHeight="80.0" fitWidth="80.0" preserveRatio="true">
                    <Image url="@../recurso/logouv.png" />
                    <!-- Sombra sutil si la deseas -->
                    <effect>
                        <DropShadow color="#00000033" offsetY="3.0" radius="5.0" />
                    </effect>
                </ImageView>
                
                <Label text="Bienvenido" textFill="#18529d">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="Ingrese sus credenciales para continuar" textFill="#666666" textAlignment="CENTER">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>
            </VBox>
            
            <!-- Formulario -->
            <VBox alignment="CENTER_LEFT" spacing="25.0" prefWidth="320.0">
                
                <!-- Campo Usuario -->
                <VBox spacing="8.0">
                    <Label text="No. de Personal" textFill="#444444">
                        <font>
                            <Font name="Segoe UI Semibold" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="tfUsuario" prefHeight="40.0" prefWidth="320.0" 
                               promptText="Ejemplo: 12345" 
                               style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-padding: 0 12 0 12;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </TextField>
                </VBox>
                
                <!-- Campo Contraseña -->
                <VBox spacing="8.0">
                    <Label text="Contraseña" textFill="#444444">
                        <font>
                            <Font name="Segoe UI Semibold" size="14.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="pfContrasenia" prefHeight="40.0" prefWidth="320.0" 
                                   promptText="Ingrese su contraseña" 
                                   style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-border-width: 1.5; -fx-padding: 0 12 0 12;">
                        <font>
                            <Font name="Segoe UI" size="14.0" />
                        </font>
                    </PasswordField>
                </VBox>
                
                <!-- Botón -->
                <Button layoutX="179.0" layoutY="279.0" mnemonicParsing="false" 
                        onAction="#btnClicIniciarSesion" prefHeight="45.0" prefWidth="320.0" 
                        style="-fx-background-color: #18529d; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(24,82,157,0.3), 10, 0, 0, 2);"
                        text="Iniciar Sesión">
                    <font>
                        <Font name="Segoe UI Semibold" size="15.0" />
                    </font>
                </Button>
                
                <!-- Enlace de ayuda (opcional) -->
                <HBox alignment="CENTER" spacing="5.0" style="-fx-padding: 15 0 0 0;">
                    <Label text="¿Problemas para ingresar?" textFill="#666666">
                        <font>
                            <Font name="Segoe UI" size="13.0" />
                        </font>
                    </Label>
                    <Label text="Contactar al administrador" textFill="#18529d" 
                           style="-fx-cursor: hand; -fx-underline: true;">
                        <font>
                            <Font name="Segoe UI Semibold" size="13.0" />
                        </font>
                    </Label>
                </HBox>
                
            </VBox>
        </VBox>
        
        <!-- Pie de página -->
        <Label text="© 2024 Sistema de Tutorías - Versión 1.0" textFill="#888888">
            <font>
                <Font name="Segoe UI" size="12.0" />
            </font>
        </Label>
        
    </VBox>
    
</VBox>