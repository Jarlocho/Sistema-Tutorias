<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane"
            prefHeight="520.0"
            prefWidth="820.0"
            style="-fx-background-color: linear-gradient(to bottom right, #F2F2F2, #E6E6E6);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sistematutorias.controlador.usuario.FXMLRegistrarAcademicoController">

    <BorderPane AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">

        <!-- HEADER -->
        <top>
            <HBox alignment="CENTER_LEFT"
                  prefHeight="80.0"
                  spacing="12.0"
                  style="-fx-background-color: #18529d; -fx-padding: 0 20 0 20;">
                <!-- Título del sistema -->
                <Label text="Sistema de Tutorías" textFill="WHITE"
                       style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Botón Cerrar sesión (opcional) -->
                <Button text="Cerrar sesión"
                        style="-fx-background-color: rgba(255,255,255,0.15);
                               -fx-text-fill: white;
                               -fx-background-radius: 8;
                               -fx-padding: 8 16;
                               -fx-cursor: hand;
                               -fx-font-size: 13;"/>
            </HBox>
        </top>

        <!-- CONTENIDO CENTRAL -->
        <center>
            <VBox alignment="TOP_LEFT"
                  spacing="20.0"
                  style="-fx-padding: 24;">
                
                <!-- Tarjeta blanca para el formulario -->
                <VBox spacing="16.0"
                      style="-fx-background-color: white;
                             -fx-background-radius: 12;
                             -fx-padding: 18;">
                    
                    <!-- Título de la tarjeta -->
                    <Label text="Registro de académico"
                           textFill="#18529d"
                           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                    <Label text="Capture los datos del académico para registrarlo en el sistema."
                           textFill="#666666"
                           style="-fx-font-size: 13px;"/>

                    <!-- Fila: Número de personal -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Número de personal:"
                               style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtNumeroPersonal"
                                   promptText="Ej. A12345"
                                   prefWidth="300.0"
                                   style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Fila: Nombre(s) -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Nombre(s):"
                               style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtNombres"
                                   promptText="Ej. Juan Carlos"
                                   prefWidth="300.0"
                                   style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Fila: Apellido paterno -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Apellido paterno:"
                               style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtApellidoPaterno"
                                   promptText="Ej. Hernández"
                                   prefWidth="300.0"
                                   style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Fila: Apellido materno -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Apellido materno:"
                               style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtApellidoMaterno"
                                   promptText="Ej. García"
                                   prefWidth="300.0"
                                   style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Fila: Usuario -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Usuario:"
                               style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtUsuario"
                                   promptText="Ej. juan.hernandez"
                                   prefWidth="300.0"
                                   style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Fila: Rol -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Rol:"
                               style="-fx-font-size: 14px;"/>
                        <ComboBox fx:id="cbRol"
                                  promptText="Seleccione un rol"
                                  prefWidth="300.0"
                                  style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Fila: Correo institucional -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Correo institucional:"
                               style="-fx-font-size: 14px;"/>
                        <TextField fx:id="txtCorreoInstitucional"
                                   promptText="Ej. juan.hernandez@uv.mx"
                                   prefWidth="300.0"
                                   style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- Fila: Academia / Programa -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Label text="Academia:"
                               style="-fx-font-size: 14px;"/>
                        <ComboBox fx:id="cbAcademia"
                                  promptText="Seleccione una academia"
                                  prefWidth="300.0"
                                  style="-fx-font-size: 13px;"/>
                    </HBox>

                    <!-- BOTONES -->
                    <HBox alignment="CENTER_RIGHT"
                          spacing="10.0">
                        <Button fx:id="btnCancelar"
                                text="Cancelar"
                                cancelButton="true"
                                onAction="#onCancelar"
                                style="-fx-background-color: transparent;
                                       -fx-border-color: #b0bec5;
                                       -fx-border-radius: 8;
                                       -fx-text-fill: #546e7a;
                                       -fx-padding: 6 16;
                                       -fx-cursor: hand;
                                       -fx-font-size: 13;"/>

                        <Button fx:id="btnGuardar"
                                text="Guardar"
                                defaultButton="true"
                                onAction="#onGuardar"
                                style="-fx-background-color: #18529d;
                                       -fx-text-fill: white;
                                       -fx-background-radius: 8;
                                       -fx-padding: 6 20;
                                       -fx-cursor: hand;
                                       -fx-font-size: 13;"/>
                    </HBox>

                </VBox>

            </VBox>
        </center>

    </BorderPane>
</AnchorPane>
